<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - E-Commerce Store</title>
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="navbar">
            <div class="logo">
                <a href="/">
                    <i class="fas fa-shopping-bag"></i> <!-- Font Awesome Icon -->
                </a>
            </div>
            <nav class="nav-links">
                <a href="/">Home</a>
                <a href="/shop">Shop</a>
                <a href="/about">About Us</a>
                <a href="/contact">Contact Us</a>
            </nav>
            <div class="header-icons">
                <a href="/account"><i style="font-size: 25px;" class="fas fa-user"></i> Account</a>
                <a href="/cart"><i class="fas fa-shopping-cart"></i> Cart</a>
            </div>
        </div>
    </header>

    <main role="main" class="content">
        @RenderBody()
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-section about">
                <h2>About Us</h2>
                <p>We are a leading e-commerce platform offering a wide range of products to cater to all your needs.</p>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>

            <div class="footer-section links">
                <h2>Quick Links</h2>
                <ul>
                    <li><a href="/shop">Shop</a></li>
                    <li><a href="/terms">Terms & Conditions</a></li>
                    <li><a href="/privacy">Privacy Policy</a></li>
                    <li><a href="/support">Customer Support</a></li>
                </ul>
            </div>

            <div class="footer-section contact">
                <h2>Contact Us</h2>
                <p>Email: support@store.com</p>
                <p>Phone: +1-800-123-4567</p>
            </div>
        </div>
        <div class="footer-bottom">
            &copy; 2024 E-Commerce Store | All Rights Reserved
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
